<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">
	
	<ImageView
		android:id="@+id/icon"
		style="@style/AppTheme.Wizard.Image"/>
	
	<FrameLayout
		style="@style/AppTheme.Wizard.Card">
		
		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<LinearLayout
				style="@style/AppTheme.Wizard.CardContent">
				
				<TextView
					android:id="@+id/title"
					style="@style/AppTheme.Label"
					android:layout_width="match_parent"
					android:layout_marginTop="@dimen/widget_padding"
					android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
				
				<TextView
					android:id="@+id/error"
					style="@style/AppTheme.Error"
					android:text="@string/error_required_field"/>
				
				<TextView
					android:id="@+id/date"
					style="@style/AppTheme.TextWithImage"
					android:drawableStart="@drawable/ic_calendar"
					android:visibility="gone"/>
				
				<TextView
					android:id="@+id/return_time"
					style="@style/AppTheme.TextWithImage"
					android:drawableStart="@drawable/ic_clock"
					android:visibility="gone"/>
				
				<TextView
					android:id="@+id/departure_time"
					style="@style/AppTheme.TextWithImage"
					android:drawableStart="@drawable/ic_clock"
					android:visibility="gone"/>
				
				<ImageView
					android:id="@+id/add"
					android:layout_width="@dimen/ideal_touch_size"
					android:layout_height="@dimen/ideal_touch_size"
					android:layout_marginTop="@dimen/section_separator"
					android:adjustViewBounds="true"
					app:srcCompat="@drawable/ic_add_colored"/>
			</LinearLayout>
		
		</android.support.v7.widget.CardView>
	</FrameLayout>
	
	<include layout="@layout/wizard_button_bar"/>
</LinearLayout>